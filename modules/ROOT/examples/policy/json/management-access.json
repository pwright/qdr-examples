# A policy to allow unrestricted access to management
# from host
#    0.0.0.0     - proton 0.12
#    localhost   - proton 0.13
#    unnamed host- proton 0.13
[
  ["vhost", {
      "hostname": "",
      "maxConnections": 50,
      "maxConnectionsPerUser": 5,
      "maxConnectionsPerHost": 20,
      "allowUnknownUser": true,
      "groups": {
        "$default" : {
          "users":            "*",
          "remoteHosts":      "*",
          "maxFrameSize":     222222,
          "maxMessageSize":   222222,
          "maxSessionWindow": 222222,
          "maxSessions":           2,
          "maxSenders":           22,
          "maxReceivers":         22,
          "allowDynamicSource":   true,
          "allowAnonymousSender": true,
          "sources": "$management",
          "targets": "$management"
        }
      }
    }
  ],
  ["vhost", {
      "hostname": "0.0.0.0",
      "maxConnections": 50,
      "maxConnectionsPerUser": 5,
      "maxConnectionsPerHost": 20,
      "allowUnknownUser": true,
      "groups": {
        "$default" : {
          "users":            "*",
          "remoteHosts":      "*",
          "maxFrameSize":     222222,
          "maxMessageSize":   222222,
          "maxSessionWindow": 222222,
          "maxSessions":           2,
          "maxSenders":           22,
          "maxReceivers":         22,
          "allowDynamicSource":   true,
          "allowAnonymousSender": true,
          "sources": "$management",
          "targets": "$management"
        }
      }
    }
  ],
  ["vhost", {
      "hostname": "localhost",
      "maxConnections": 50,
      "maxConnectionsPerUser": 5,
      "maxConnectionsPerHost": 20,
      "allowUnknownUser": true,
      "groups": {
        "$default" : {
          "users":            "*",
          "remoteHosts":      "*",
          "maxFrameSize":     222222,
          "maxMessageSize":   222222,
          "maxSessionWindow": 222222,
          "maxSessions":           2,
          "maxSenders":           22,
          "maxReceivers":         22,
          "allowDynamicSource":   true,
          "allowAnonymousSender": true,
          "sources": "$management",
          "targets": "$management"
        }
      }
    }
  ]
]
